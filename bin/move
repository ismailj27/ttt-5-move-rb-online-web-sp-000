#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here

puts "Welcome to Tic Tac Toe!"
new_board = [" "," "," "," "," "," "," "," "," "]
puts "Where would you like to go?"
position = gets.strip
index = input_to_index(position)
move(new_board, index, default_player = "X")
display_board(new_board)